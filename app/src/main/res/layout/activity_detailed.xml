<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailedActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:overScrollMode="never"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:foregroundGravity="center">
    </androidx.viewpager.widget.ViewPager>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ViewPager">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/detailed_activity_description"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_light"
                android:text="Observe the comments made about you by your parents, friends, teachers or you may directly ask them. Note these points on a paper and try to make a sample of description."
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:id="@+id/linear_places"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPager"
                android:gravity="bottom"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_information_about"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/place_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petra"
                    android:textSize="24sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/blue_logo"
                    />
            </LinearLayout>

            <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="3"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:useDefaultMargins="true"
            xmlns:app="http://schemas.android.com/apk/res-auto">

                         <TextView
                          android:id="@+id/cost"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/detailed_activity_cost"
                          android:layout_column="0"
                          android:layout_row="0"
                          android:layout_gravity="bottom"
                          android:fontFamily="@font/montserrat_medium"
                          android:textSize="18sp"
                          android:textColor="@android:color/black"/>


                        <FrameLayout
                            android:layout_width="210dp"
                            android:layout_height="30dp"
                            android:layout_row="0"
                            android:layout_column="1">
                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                app:rcProgress="100"
                                app:rcSecondaryProgress="0"
                                app:rcMax="100"
                                app:rcRadius="0dp"
                                android:id="@+id/cost_progress"
                                android:layout_gravity="bottom"
                                app:rcBackgroundPadding="2dp"
                                app:rcReverse="false"
                                app:rcSecondaryProgressColor="@android:color/transparent"
                                app:rcBackgroundColor="@color/background_gray" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:id="@+id/cost_tv"
                                android:fontFamily="@font/montserrat_light"
                                android:text="$200"
                                android:textSize="14sp"
                                android:layout_gravity="top"/>
                        </FrameLayout>


                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="@string/detailed_activity_temp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_gravity="bottom"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_row="1"
                        android:layout_column="1">
                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            app:rcProgress="55"
                            app:rcSecondaryProgress="0"
                            app:rcMax="50"
                            app:rcRadius="0dp"
                            android:id="@+id/temp_progress"
                            app:rcBackgroundPadding="2dp"
                            android:layout_gravity="bottom"
                            app:rcReverse="false"
                            app:rcProgressColor="@color/orange_good"
                            app:rcSecondaryProgressColor="@android:color/transparent"
                            app:rcBackgroundColor="@color/background_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:id="@+id/temp_tv"
                            android:text="30C"
                            android:fontFamily="@font/montserrat_light"
                            android:textSize="14sp"
                            android:layout_gravity="top"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/air_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_air_quality"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>

                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_row="2"
                        android:layout_column="1">
                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            app:rcProgress="30"
                            app:rcSecondaryProgress="0"
                            app:rcMax="100"
                            app:rcRadius="0dp"
                            android:id="@+id/air_quality_progress"
                            app:rcBackgroundPadding="2dp"
                            app:rcReverse="false"
                            android:layout_gravity="bottom"
                            app:rcProgressColor="@color/red_bad"
                            app:rcSecondaryProgressColor="@android:color/transparent"
                            app:rcBackgroundColor="@color/background_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:id="@+id/air_quality_tv"
                            android:text="62"
                            android:fontFamily="@font/montserrat_light"
                            android:textSize="14sp"
                            android:layout_gravity="top"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_internet"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_gravity="bottom"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@android:color/black"/>

                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="30dp"
                        android:layout_row="3"
                        android:layout_column="1">
                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            app:rcProgress="100"
                            app:rcSecondaryProgress="0"
                            app:rcMax="100"
                            app:rcRadius="0dp"
                            android:layout_gravity="bottom"
                            android:id="@+id/internet_progress"
                            app:rcBackgroundPadding="2dp"
                            app:rcReverse="false"
                            app:rcProgressColor="@color/orange_good"
                            app:rcSecondaryProgressColor="@android:color/transparent"
                            app:rcBackgroundColor="@color/background_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:id="@+id/internet_tv"
                            android:text="Good"
                            android:fontFamily="@font/montserrat_light"
                            android:textSize="14sp"
                            android:layout_gravity="top"/>
                    </FrameLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/recommendationPlace"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPager"
                android:gravity="bottom"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/reco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_recommendations_for"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/place_reco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petra"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="24sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/blue_logo"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                   <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                       android:layout_weight="1"
                    android:orientation="vertical">

                       <com.wajahatkarim3.easyflipview.EasyFlipView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           app:flipOnTouch="true"
                           app:flipEnabled="true"
                           app:flipDuration="400"
                           android:layout_gravity="center"
                           app:flipFrom="right"
                           app:flipType="horizontal"
                           android:id="@+id/season_btn"
                           app:autoFlipBack="false"
                           >
                           <!-- Back Layout Goes Here -->
                           <include layout="@layout/back_view_recommendations"
                               android:id="@+id/back_season"/>
                           <!-- Front Layout Goes Here -->
                           <include layout="@layout/front_view_recommendations"
                               android:id="@+id/front_season"/>
                       </com.wajahatkarim3.easyflipview.EasyFlipView>
                      <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/detailed_activity_season"
                          android:fontFamily="@font/montserrat_medium"
                          android:textSize="16sp"
                          android:layout_marginTop="5dp"
                          android:textColor="@android:color/black"
                       android:layout_gravity="center"/>
                   </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flipOnTouch="true"
                        app:flipEnabled="true"
                        app:flipDuration="400"
                        android:layout_gravity="center"
                        app:flipFrom="right"
                        app:flipType="horizontal"
                        android:id="@+id/time_btn"
                        app:autoFlipBack="false"
                        >
                        <!-- Back Layout Goes Here -->
                        <include layout="@layout/back_view_recommendations"
                            android:id="@+id/back_time"/>
                        <!-- Front Layout Goes Here -->
                        <include layout="@layout/front_view_recommendations"
                            android:id="@+id/front_time"/>
                    </com.wajahatkarim3.easyflipview.EasyFlipView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_time"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flipOnTouch="true"
                        app:flipEnabled="true"
                        app:flipDuration="400"
                        android:layout_gravity="center"
                        app:flipFrom="right"
                        app:flipType="horizontal"
                        android:id="@+id/age_btn"
                        app:autoFlipBack="false"
                        >
                        <!-- Back Layout Goes Here -->
                        <include layout="@layout/back_view_recommendations"
                            android:id="@+id/back_age"/>
                        <!-- Front Layout Goes Here -->
                        <include layout="@layout/back_view_recommendations"
                            android:id="@+id/front_ag"/>
                    </com.wajahatkarim3.easyflipview.EasyFlipView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_age"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <com.wajahatkarim3.easyflipview.EasyFlipView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:flipOnTouch="true"
                        app:flipEnabled="true"
                        app:flipDuration="400"
                        android:layout_gravity="center"
                        app:flipFrom="right"
                        app:flipType="horizontal"
                        android:id="@+id/estimated_btn"
                        app:autoFlipBack="false"
                        >
                        <!-- Back Layout Goes Here -->
                        <include layout="@layout/back_view_recommendations"
                            android:id="@+id/back_estimated"/>
                        <!-- Front Layout Goes Here -->
                        <include layout="@layout/front_view_recommendations"
                            android:id="@+id/front_estimated"/>
                    </com.wajahatkarim3.easyflipview.EasyFlipView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_estimation"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_location"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPager"
                android:gravity="bottom"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_location_for"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/location_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Petra"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="24sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/blue_logo"
                    />
            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:layout_marginTop="5dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>