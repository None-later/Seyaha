<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPager"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_alignParentTop="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:foregroundGravity="center">
    </androidx.viewpager.widget.ViewPager>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ViewPager">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/detailed_activity_description"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Observe the comments made about you by your parents, friends, teachers or you may directly ask them. Note these points on a paper and try to make a sample of description."
                android:textColor="@color/colorPrimary"/>
            <LinearLayout
                android:id="@+id/linear_places"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPager"
                android:gravity="bottom"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_information_about"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"/>
                <TextView
                    android:id="@+id/place_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACE"
                    android:textSize="24sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/light_grey"
                    />
            </LinearLayout>

            <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="3"
            android:layout_marginRight="20dp"
            android:useDefaultMargins="true"
            xmlns:app="http://schemas.android.com/apk/res-auto">




                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:layout_column="0"
                            android:layout_row="0"
                            android:src="@drawable/ic_cost"
                            android:layout_gravity="center"
                            />

                         <TextView
                          android:id="@+id/cost"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:text="@string/detailed_activity_cost"
                          android:layout_column="1"
                          android:layout_row="0"
                          android:gravity="left"
                          android:layout_gravity="center"
                          android:textSize="18sp"
                          android:textColor="@color/colorPrimary"/>


                        <FrameLayout
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="2">
                            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                app:rcProgress="100"
                                app:rcSecondaryProgress="0"
                                app:rcMax="100"
                                app:rcRadius="15dp"
                                android:id="@+id/cost_progress"
                                app:rcBackgroundPadding="2dp"
                                app:rcReverse="false"
                                app:rcSecondaryProgressColor="@android:color/transparent"
                                app:rcBackgroundColor="@color/background_gray" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:id="@+id/cost_tv"
                                android:text="$200"
                                android:textSize="14sp"
                                android:layout_gravity="center"/>
                        </FrameLayout>





                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:src="@drawable/ic_temperature"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/temp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:text="@string/detailed_activity_temp"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="2">
                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            app:rcProgress="55"
                            app:rcSecondaryProgress="0"
                            app:rcMax="50"
                            app:rcRadius="15dp"
                            android:id="@+id/temp_progress"
                            app:rcBackgroundPadding="2dp"
                            app:rcReverse="false"
                            app:rcProgressColor="@color/orange_good"
                            app:rcSecondaryProgressColor="@android:color/transparent"
                            app:rcBackgroundColor="@color/background_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:id="@+id/temp_tv"
                            android:text="30C"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>
                    </FrameLayout>



                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:src="@drawable/ic_air_quality"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/air_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_air_quality"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="2">
                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            app:rcProgress="30"
                            app:rcSecondaryProgress="0"
                            app:rcMax="100"
                            app:rcRadius="15dp"
                            android:id="@+id/air_quality_progress"
                            app:rcBackgroundPadding="2dp"
                            app:rcReverse="false"
                            app:rcProgressColor="@color/red_bad"
                            app:rcSecondaryProgressColor="@android:color/transparent"
                            app:rcBackgroundColor="@color/background_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:id="@+id/air_quality_tv"
                            android:text="62"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>
                    </FrameLayout>




                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:src="@drawable/ic_internet"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/internet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_internet"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"/>

                    <FrameLayout
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_row="3"
                        android:layout_column="2">
                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            app:rcProgress="100"
                            app:rcSecondaryProgress="0"
                            app:rcMax="100"
                            app:rcRadius="15dp"
                            android:id="@+id/internet_progress"
                            app:rcBackgroundPadding="2dp"
                            app:rcReverse="false"
                            app:rcProgressColor="@color/orange_good"
                            app:rcSecondaryProgressColor="@android:color/transparent"
                            app:rcBackgroundColor="@color/background_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:id="@+id/internet_tv"
                            android:text="Good"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>
                    </FrameLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/recommendationPlace"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPager"
                android:gravity="bottom"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/reco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_recommendations_for"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"/>
                <TextView
                    android:id="@+id/place_reco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACE"
                    android:textSize="24sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/light_grey"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                   <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                       android:layout_weight="1"
                    android:orientation="vertical">

                       <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                           <ImageButton
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:id="@+id/prefered_season_image_button"
                            android:background="@drawable/circle"
                            android:src="@drawable/ic_summer"/>
                            <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                              android:id="@+id/prefered_season_text_view"
                              android:visibility="invisible"
                              android:text="Summer"
                              android:clickable="false"/>
                      </FrameLayout>

                      <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/detailed_activity_season"
                          android:textSize="18sp"
                       android:layout_gravity="center"/>
                   </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:id="@+id/prefered_time_to_go"
                            android:background="@drawable/circle"
                            android:src="@drawable/ic_day"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/prefered_time_to_go_tv"
                            android:visibility="invisible"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="Day"
                            android:clickable="false"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_time"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:id="@+id/prefered_age_img"
                            android:background="@drawable/circle"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/prefered_age_tv"
                            android:text="+13"
                            android:textSize="30sp"
                            android:textColor="@android:color/white"
                            android:clickable="false"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_age"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:id="@+id/prefered_average_time_img"
                            android:background="@drawable/circle"
                            android:src="@drawable/ic_sand_clock"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:id="@+id/prefered_average_time_tv"
                            android:visibility="invisible"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:text="2Hrs"
                            android:clickable="false"/>
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detailed_activity_estimation"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_location"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPager"
                android:gravity="bottom"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_location_for"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_grey"/>
                <TextView
                    android:id="@+id/location_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLACE"
                    android:textSize="24sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/light_grey"
                    />
            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:layout_marginTop="5dp"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <TextView
                android:id="@+id/nearby_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detailed_activity_near_by"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"/>
            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/detailed_activity_restaurants"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:layout_marginLeft="3dp"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/ic_meal"
                    android:background="@drawable/new_corners"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_activity_hotels"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:drawableRight="@drawable/ic_hotel"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textAllCaps="false"
                    android:background="@drawable/new_corners"
                    />

                <Button
                    android:text="@string/detailed_activity_gas_station"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_fuel"
                    android:layout_width="wrap_content"
                    android:background="@drawable/new_corners"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_marginRight="3dp"
                    android:textAllCaps="false"
                    />

            </LinearLayout>


        </LinearLayout>





    </ScrollView>

</RelativeLayout>