<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@drawable/corners"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="@color/blue_logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:drawable/screen_background_light_transparent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_below="@id/rv"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_add"
            android:background="@color/blue_logo"
            />
        <TextView
            android:id="@+id/num_of_person"
            android:layout_width="30dp"
            android:gravity="center_horizontal"
            android:layout_height="33dp"
            android:text="1"
            android:textColor="@color/blue_logo"
            android:textSize="26sp"/>
        <ImageButton
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_remove"
            android:background="@color/blue_logo"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_border_radius"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/alert_rating_cancel"
            android:textColor="@color/blue_logo"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/apply"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>