<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/comment_profile_pic"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_launcher_background"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/comment_person_name"
                android:text="motassem Naqawah"
                android:textColor="@android:color/black"
                android:fontFamily="@font/montserrat_medium" />
            <RatingBar
                android:id="@+id/comment_rating_bar"
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0"
                android:theme="@style/RatingBar" />

        </LinearLayout>

    </LinearLayout>

    <TextView android:id="@+id/comment_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="18sp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/montserrat_medium"
        android:text="it was a really nice tour would recommend it to all of my friends"/>

</LinearLayout>